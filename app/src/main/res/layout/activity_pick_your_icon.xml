<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.michaelwu.tictactoe.PickYourIconActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/settingActivity_imageButton_lizard"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@mipmap/lizard"/>

        <ImageButton
            android:layout_width="76dp"
            android:layout_height="63dp"
            android:id="@+id/settingActivity_imageButton_corgi"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@mipmap/corgi"/>

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:id="@+id/settingActivity_imageButton_kitten"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@mipmap/kitten"/>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/settingActivity_imageButton_tesla"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@mipmap/tesla"/>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/settingActivity_imageButton_bunny"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@mipmap/bunny"/>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/settingActivity_imageButton_clown"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@mipmap/clown"/>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/settingActivity_imageButton_X"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/ic_clear_black_24dp"/>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/settingActivity_imageButton_O"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/ic_panorama_fish_eye_black_24dp"/>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/settingActivity_imageButton_selfie"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/ic_party_mode_black_24dp" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/pick_your_icon_activity_button_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
