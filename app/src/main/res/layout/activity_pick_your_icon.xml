<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.michaelwu.tictactoe.PickYourIconActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/settingActivity_imageButton_lizard"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@mipmap/lizard"/>

        <ImageButton
            android:layout_width="76dp"
            android:layout_height="63dp"
            android:id="@+id/settingActivity_imageButton_corgi"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@mipmap/corgi"/>

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="62dp"
            android:id="@+id/settingActivity_imageButton_kitten"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@mipmap/kitten"/>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/imageButton5"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@mipmap/tesla"/>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/imageButton4"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@mipmap/bunny"/>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/imageButton6"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@mipmap/clown"/>

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/imageButton7"
            android:layout_row="2"
            android:layout_column="0"
            />

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/imageButton8"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="74dp"
            android:layout_height="62dp"
            android:id="@+id/imageButton9"
            android:layout_row="2"
            android:layout_column="2" />
    </GridLayout>
</RelativeLayout>
